@model IEnumerable<GestionEstacionamientoRicardo.Models.TiposVehiculo>

@{
    ViewData["Title"] = "Listado de Tipos de Vehículos";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <p class="lead">Listado de tipos de vehículos y sus tarifas por minuto.</p>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Tipo</a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.TarifaPorMinuto)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.TarifaPorMinuto)</td>
                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.TipoId">Editar</a>
                        <a asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@item.TipoId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.TipoId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
