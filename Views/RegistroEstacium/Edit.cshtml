@model GestionEstacionamientoRicardo.Models.RegistroEstancium

@{
    ViewData["Title"] = "Editar Registro";
}

<div class="container mt-5">
    <h1 class="text-primary mb-3">@ViewData["Title"]</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-secondary mb-4">Editar Registro de Estacionamiento</h4>

           
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                
                <input type="hidden" asp-for="EstanciaId" />

                <div class="form-group mb-3">
                    <label asp-for="VehiculoId" class="control-label">Vehículo</label>
                    <select asp-for="VehiculoId" class="form-control" asp-items="ViewBag.VehiculoId"></select>
                    <span asp-validation-for="VehiculoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaEntrada" class="control-label">Fecha de Entrada</label>
                   
                    <input asp-for="FechaEntrada" class="form-control" value="@Model.FechaEntrada.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaSalida" class="control-label">Fecha de Salida</label>
                   
                    <input asp-for="FechaSalida" class="form-control" value="@(Model.FechaSalida.HasValue ? Model.FechaSalida.Value.ToString("yyyy-MM-ddTHH:mm") : "")" /> @* copilot *@

                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

