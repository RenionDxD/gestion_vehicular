@model IEnumerable<GestionEstacionamientoRicardo.Models.RegistroEstancium>

@{
    ViewData["Title"] = "Registro de Estancias";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <p class="lead">Listado de registros de estancias de vehículos en el estacionamiento.</p>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Registro</a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaEntrada)</th>
                <th>Hora de Salida</th>
                <th>@Html.DisplayNameFor(model => model.Vehiculo)</th>
                <th>@Html.DisplayNameFor(model => model.Monto)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaEntrada.ToString("yyyy-MM-dd HH:mm")</td> 
                    <td>@(item.FechaSalida.HasValue ? item.FechaSalida.Value.ToString("HH:mm") : "N/A")</td> 
                    <td>@Html.DisplayFor(modelItem => item.Vehiculo.Placa)</td>
                    <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.EstanciaId">Editar</a>
                        <a asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@item.EstanciaId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.EstanciaId">Eliminar</a>
                    </td>
                    <td> @Html.ActionLink("Check", "CheckOut", new { id = item.EstanciaId }, new { @class = "btn btn-primary" }) </td> @* boton de checkout *@
                </tr>
            }
        </tbody>
    </table>
</div>
